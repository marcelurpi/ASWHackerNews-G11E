    <tbody>
        <tr class="athing" id="29201335">    
            <td class="ind"></td>
            <td valign="top" class="votelinks">
                <center>
                    <a id="up_29201335" onclick="CANVIAR A LIKE">
                        <div class="votearrow" title="upvote"></div>
                    </a>
                </center>    
            </td>
            <td class="default">
                <div style="margin-top:2px; margin-bottom:-10px;">
                    <span class="comhead">
                        <a href="CANVIAR" class="hnuser"> <%= @comment.user_id %> </a> 
                        <span class="age" title="2021-11-12T16:45:17">
                            <%= time_ago_in_words(@comment.created_at) %> ago
                        </span> 
                        <span id="unv_29201335"></span>
                        <span class="navs"> 
                            | <a href="CANVIAR">parent</a> 
                        </span>
                        <span class="onstory"> 
                            |  on: <a href="CANVIAR">POST TITLE</a>
                        </span>                  
                    </span>
                </div>
                <br>
                <div class="comment">
                    <span class="commtext c00"> 
                        <%= @comment.content %>
                        <div class="reply"></div>
                    </span>
                </div>
            </td>
        </tr>
        <tr style="height:10px"></tr>
        <tr>
            <td colspan="2"></td>
            <td>
                <%= form_for [@comment, Comment.new] do |f| %>
                    <%=f.hidden_field :commentable_id, value: @comment.id %>
                    <%=f.hidden_field :commentable_type, value: "Comment" %>
                    <% if cookies.signed[:user_id].nil? %> 
                        <a id="login" href="<%= login_path %>"></a>
                    <% else %>
                        <%= hidden_field_tag :id_author, User.find(cookies.signed[:user_id]).name %>
                    <% end %>
                    <%=f.text_area :content, placeholder: "Add a Reply" %><br/>
                    <%=f.submit "Reply"  %>
                <% end %>
                  
                <form method="post" action="<%= comment_comment_path(@comment) %>">
                    <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
                     
                    <% if cookies.signed[:user_id].nil? %> 
                        <a id="login" href="<%= login_path %>"></a>
                    <% else %>
                        <%= hidden_field_tag :id_author, User.find(cookies.signed[:user_id]).name %>
                    <% end %>
                    
                    <!-- %= hidden_field_tag :user_id, 1 %--> 
                    <%= hidden_field_tag :parent, @comment.comment_id %>
                    <textarea name="content" rows="6" cols="60"></textarea>
                    <br><br>
                    <input type="submit" value="add comment">
                </form>
                
            </td>
        </tr>
    </tbody>
</table>