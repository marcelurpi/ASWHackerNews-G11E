<center>
  <table id="hnmain" border="0" cellpadding="0" cellspacing="0" width="85%" bgcolor="#f6f6ef">
    <tbody>
      <tr>
        <td bgcolor="#ff6600">
          <table border="0" cellpadding="0" cellspacing="0" width="100%" style="padding:2px">
            <tbody>
              <tr>
                <td style="width:18px;padding-right:4px"><a href="<%= posts_path %>"><img src="https://news.ycombinator.com/y18.gif" width="18" height="18" style="border:1px white solid;"></a></td>
                <td style="line-height:12pt; height:10px;">
                  <span class="pagetop">
                    <b class="hnname"><a href="<%= posts_path %>">Hacker News</a></b>
                    <a href="<%= posts_newest_path %>">new</a> | <a href="<%= new_post_path %>">submit</a> | <a href="<%= posts_ask_path %>">ask</a>
                  </span>
                </td>
                <td style="text-align:right;padding-right:4px;">
                  <span class="pagetop">
                    <% if cookies.signed[:user_id].nil? %> 
                      <a id="login" href="<%= login_path %>">signup/login</a>
                    <% else %>
                      <a id="me" href="<%= profile_login_path(:name => User.find(cookies.signed[:user_id]).name) %>"><%= User.find(cookies.signed[:user_id]).name %></a> | <a id="logout" href="<%= delete_login_path %>">logout</a>
                    <% end %>
                  </span>
                </td>
              </tr>
            </tbody>
          </table>
        </td>
      </tr>
      <tr id="pagespace" title="" style="height:10px"></tr>
      <tr>
        <td>
          <table border="0" cellpadding="0" cellspacing="0" class="itemlist">
            <tbody>
              <% @posts.each_with_index do |post, index| %>
                <tr class="athing" id="28940860">
                  <td align="right" valign="top" class="title">
                    <span class="rank"><%= index+1 %>.</span>
                  </td>
                  <td valign="top" class="votelinks">
                    <center>
                      <div class="votearrow" title="vota"><%= link_to '_', post_likes_path(post), method: :post %></div> <!-- potser el post que li passem hauria de ser amb @ (pel que fa el tutorial)-->
                      <!--<div class="votearrow" title="upvote">< %= link_to '_', like_post_path(post), method: :put %></div>-->
                    </center>
                  </td>
                 <td class="title">
                    <% if !post.url.nil? && !post.url.empty? %>
                    <a href="https://<%= post.url.gsub("https://", "").gsub("http://", "") %>"><%= post.title %></a>
                    <span class="sitebit comhead"> (<a href="https://<%= post.url.gsub("https://", "").gsub("http://", "").split('/').first %>"><span class="sitestr"><%= post.url.gsub("https://", "").gsub("http://", "").split('/').first %></span></a>)</span>
                    <% else %>
                    <%= link_to "#{post.title}", post %>
                    <% end %>
                  </td>
                </tr>
                <tr>
                  <td colspan="2"></td>
                  <td class="subtext">
                    <span class="score" id="score"><%= post.likes.count %> points</span>
                    <!--<span class="score" id="score">< %= post.points %> points</span>-->
                    by <a href="<%= profile_login_path(:name => post.author) %>" class="hnuser"><%= post.author %></a> 
                    <span class="age" title="time_ago"><a href=""><%= time_ago_in_words(post.created_at)  %> ago </a></span> 
                    <span id="unv_28940860"></span> | <a href="" onclick="">hide</a> | <% pre_like = post.likes.find { |like| like.user_id == cookies.signed[:user_id]} %> <% if pre_like %> <%= link_to 'unlike', post_like_path(post, pre_like), method: :delete %>  | <% end %><%= link_to 'Show', post %> <%= post.numcomments %> comments</a>
                    <!--<span id="unv_28940860"></span> | <a href="" onclick="">hide</a> | < %= link_to 'unlike', unlike_post_path(post), method: :put %> | < %= link_to 'Show', post %> < %= post.numcomments %> comments</a>-->
                  </td>
                </tr>
                <tr class="spacer" style="height:5px"></tr>
              <% end %>
            </tbody>
          </table>
        </td>
      </tr>
      <tr><td><img src="s.gif" height="10" width="0"><table width="100%" cellspacing="0" cellpadding="1"><tbody><tr><td bgcolor="#ff6600"></td></tr></tbody></table><br><center><span class="yclinks">
        <a href="">Guidelines</a>
        | <a href="">FAQ</a>
        | <a href="">Lists</a>
        | <a href="">API</a>
        | <a href="">Security</a>
        | <a href="">Legal</a>
        | <a href="">Apply to YC</a>
        | <a href="">Contact</a></span><br><br>
            </center></td></tr>
    </tbody>
  </table>
</center>