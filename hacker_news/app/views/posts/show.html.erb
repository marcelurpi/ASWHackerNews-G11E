          <td>
            <table class="fatitem" border="0">
                <tbody>
                  <tr class="athing" id="29016506">
                    <td align="right" valign="top" class="title">
                      <span class="rank"></span>
                    </td>      
                    <td valign="top" class="votelinks">
                      <center>
                        <a id="up_29016506" href="CANVIAR"> <!-- link a upvote -->
                          <div class="votearrow" title="upvote"></div>
                        </a>
                      </center>
                    </td>
                    <td class="title">
                      <a href="" class="titlelink"><%= @post.title %></a>
                      <span class="sitebit comhead"> </span>
                    </td>
                  </tr>
                  <tr>
                    <td colspan="2"></td>
                    <td class="subtext">
                      <span class="score" id="score_29016506"><%= @post.points %></span> 
                        by <a href="" class="hnuser"><%= @post.author %></a> 
                      <span class="age" title="<%@post.created_at%>">
