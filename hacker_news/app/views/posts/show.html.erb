                      <span id="unv_29016506">
                        | <%= @post.comments.length() %>&nbsp;comments
                      </span> 
                                       
                    </td></tr>
                  <tr>
                    <td colspan="2"></td>
                    <td><%= @post.content %></td>
                  </tr>
                  <tr>
                    <td colspan="2"></td>
                    <td>
                    <form method="post" action="<%= comment_post_path(@post) %>">
                      <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
                         
                        <% if cookies.signed[:user_id].nil? %> 
                          <a id="login" href="<%= login_path %>"></a>
                        <% else %>
                          <%= hidden_field_tag :id_author, User.find(cookies.signed[:user_id]).name %>
                        <% end %>
                        
                        <!-- %= hidden_field_tag :user_id, 1 %--> 
                        <%= hidden_field_tag :parent, @post.id_post %>
                        <textarea name="content" rows="6" cols="60"></textarea>
                        <br><br>
                        <input type="submit" value="add comment">
                      </form>
                    </td></tr></table>
